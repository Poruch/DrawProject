<UserControl x:Class="DrawProject.Controls.ColorSlider"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:converters="clr-namespace:DrawProject.Converters"
             xmlns:local="clr-namespace:DrawProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ColorToColorNameConverter x:Key="ColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="10">

            <!-- Заголовок -->
            <TextBlock Text="Color Sliders" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="0,0,0,10"
                      HorizontalAlignment="Center"/>

            <!-- Превью цвета -->
            <Border BorderBrush="Black" 
                   BorderThickness="1" 
                   Height="40" 
                   Margin="0,0,0,10"
                   Background="{Binding PreviewColor, ElementName=Root}"/>

            <!-- Красный (R) -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="R:"/>
                <Slider Grid.Column="1" 
                       x:Name="RedSlider"
                       Minimum="0" Maximum="255" 
                       Value="{Binding Red, ElementName=Root, Mode=TwoWay}"
                       ValueChanged="Slider_ValueChanged">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Red" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" 
                        Text="{Binding Value, ElementName=RedSlider, StringFormat=N0}"/>
            </Grid>

            <!-- Зеленый (G) -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="G:"/>
                <Slider Grid.Column="1" 
                       x:Name="GreenSlider"
                       Minimum="0" Maximum="255" 
                       Value="{Binding Green, ElementName=Root, Mode=TwoWay}"
                       ValueChanged="Slider_ValueChanged">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Green" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" 
                        Text="{Binding Value, ElementName=GreenSlider, StringFormat=N0}"/>
            </Grid>

            <!-- Синий (B) -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="B:"/>
                <Slider Grid.Column="1" 
                       x:Name="BlueSlider"
                       Minimum="0" Maximum="255" 
                       Value="{Binding Blue, ElementName=Root, Mode=TwoWay}"
                       ValueChanged="Slider_ValueChanged">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Blue" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" 
                        Text="{Binding Value, ElementName=BlueSlider, StringFormat=N0}"/>
            </Grid>

            <!-- Прозрачность (A) -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="A:"/>
                <Slider Grid.Column="1" 
                       x:Name="AlphaSlider"
                       Minimum="0" Maximum="255" 
                       Value="{Binding Alpha, ElementName=Root, Mode=TwoWay}"
                       ValueChanged="Slider_ValueChanged">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" 
                        Text="{Binding Value, ElementName=AlphaSlider, StringFormat=N0}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

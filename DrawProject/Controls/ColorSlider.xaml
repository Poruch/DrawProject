<UserControl
    x:Class="DrawProject.Controls.ColorSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DrawProject.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawProject.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ColorToColorNameConverter x:Key="ColorConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="10">

            <!--  Заголовок  -->
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Color Sliders" />

            <!--  Превью цвета  -->
            <Border
                Height="40"
                Margin="0,0,0,10"
                Background="{Binding PreviewColor, ElementName=Root}"
                BorderBrush="Black"
                BorderThickness="1" />

            <!--  Красный (R)  -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="R:" />
                <Slider
                    x:Name="RedSlider"
                    Grid.Column="1"
                    Maximum="255"
                    Minimum="0"
                    ValueChanged="Slider_ValueChanged"
                    Value="{Binding Red, ElementName=Root, Mode=TwoWay}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="Black" />
                            <GradientStop Offset="1" Color="Red" />
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" Text="{Binding Value, ElementName=RedSlider, StringFormat=N0}" />
            </Grid>

            <!--  Зеленый (G)  -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="G:" />
                <Slider
                    x:Name="GreenSlider"
                    Grid.Column="1"
                    Maximum="255"
                    Minimum="0"
                    ValueChanged="Slider_ValueChanged"
                    Value="{Binding Green, ElementName=Root, Mode=TwoWay}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="Black" />
                            <GradientStop Offset="1" Color="Green" />
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" Text="{Binding Value, ElementName=GreenSlider, StringFormat=N0}" />
            </Grid>

            <!--  Синий (B)  -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="B:" />
                <Slider
                    x:Name="BlueSlider"
                    Grid.Column="1"
                    Maximum="255"
                    Minimum="0"
                    ValueChanged="Slider_ValueChanged"
                    Value="{Binding Blue, ElementName=Root, Mode=TwoWay}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="Black" />
                            <GradientStop Offset="1" Color="Blue" />
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" Text="{Binding Value, ElementName=BlueSlider, StringFormat=N0}" />
            </Grid>

            <!--  Прозрачность (A)  -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="A:" />
                <Slider
                    x:Name="AlphaSlider"
                    Grid.Column="1"
                    Maximum="255"
                    Minimum="0"
                    ValueChanged="Slider_ValueChanged"
                    Value="{Binding Alpha, ElementName=Root, Mode=TwoWay}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="Transparent" />
                            <GradientStop Offset="1" Color="Gray" />
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBox Grid.Column="2" Text="{Binding Value, ElementName=AlphaSlider, StringFormat=N0}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl
    x:Class="DrawProject.Controls.HybridCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawProject.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources />
    <Grid>
        <Canvas
            x:Name="_transparencyCanvas"
            Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MouseWheel="OnCanvasMouseWheel">
            <!--  1. Фон (красный для теста)  -->

            <!--  Видно ли красный?  -->
            <!--  Установите Width и Height или привяжите к Canvas  -->
            <Rectangle
                Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Fill="{StaticResource CheckerboardBrush}" />
        </Canvas>

        <!--  Слой 2: Растровое изображение  -->
        <Image
            x:Name="_rasterImage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="None" />

        <!--  Слой 3: Векторный слой (прозрачный)  -->
        <Canvas
            x:Name="_vectorOverlay"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent" />
    </Grid>
</UserControl>

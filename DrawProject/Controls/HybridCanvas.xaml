<UserControl x:Class="DrawProject.Controls.HybridCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="rootCanvas" Background="White" MouseWheel="OnCanvasMouseWheel">
        <Rectangle x:Name="transparencyBackground">
            <Rectangle.Fill>
                <VisualBrush TileMode="Tile" Viewport="0,0,10,10" 
                           ViewportUnits="Absolute">
                    <VisualBrush.Visual>
                        <Grid Width="20" Height="20">
                            <Rectangle Fill="LightGray" Width="10" Height="10"/>
                            <Rectangle Fill="White" Width="10" Height="10" 
                                     Canvas.Left="10"/>
                            <Rectangle Fill="White" Width="10" Height="10" 
                                     Canvas.Top="10"/>
                            <Rectangle Fill="LightGray" Width="10" Height="10" 
                                     Canvas.Left="10" Canvas.Top="10"/>
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</UserControl>

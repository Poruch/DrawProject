<UserControl x:Class="DrawProject.Controls.HybridCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Canvas x:Name="_transparencyCanvas" MouseWheel="OnCanvasMouseWheel">
            <!-- 1. Фон (красный для теста) -->

            <!-- Видно ли красный? -->
            <!-- Установите Width и Height или привяжите к Canvas -->
            <Rectangle Width="{Binding ActualWidth, ElementName=_transparencyCanvas}"
                  Height="{Binding ActualHeight, ElementName=_transparencyCanvas}"
                    Fill="{StaticResource CheckerboardBrush}">
            </Rectangle>
        </Canvas>

        <!-- Слой 2: Растровое изображение -->
        <Image x:Name="_rasterImage"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Stretch="None"/>

        <!-- Слой 3: Векторный слой (прозрачный) -->
        <Canvas x:Name="_vectorOverlay"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"/>
    </Grid>
</UserControl>

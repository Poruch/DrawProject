<UserControl
    x:Class="DrawProject.Controls.HybridCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawProject.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--  Главный контейнер с фиксированным размером  -->
        <Canvas
            x:Name="_mainContainer"
            Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ClipToBounds="True">

            <!--  1. Фон (шахматка)  -->
            <Rectangle
                x:Name="backgroundRect"
                Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Fill="{StaticResource CheckerboardBrush}" />

            <!--  2. Растровое изображение  -->
            <Image
                x:Name="_rasterImage"
                Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Stretch="None" />

            <!--  3. Векторный слой  -->
            <Canvas
                x:Name="_vectorOverlay"
                Width="{Binding ImageDocument.Width, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding ImageDocument.Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Background="Transparent" />

        </Canvas>
    </Grid>
</UserControl>
<UserControl x:Class="DrawProject.Controls.ColorWheelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="Root">
    <Grid>
        <!-- Фон с видимым градиентом в дизайнере -->
        <Ellipse x:Name="ColorWheelEllipse" 
                 Stroke="Black" 
                 StrokeThickness="1"
                 MouseLeftButtonDown="ColorWheel_MouseDown"
                 MouseMove="ColorWheel_MouseMove"
                 MouseLeftButtonUp="ColorWheel_MouseUp">
            <Ellipse.Fill>
                <!-- Более сложный градиент для превью -->
                <RadialGradientBrush RadiusX="1" RadiusY="1">
                    <GradientStop Color="Red" Offset="0.0"/>
                    <GradientStop Color="Yellow" Offset="0.1"/>
                    <GradientStop Color="Lime" Offset="0.2"/>
                    <GradientStop Color="Cyan" Offset="0.3"/>
                    <GradientStop Color="Blue" Offset="0.4"/>
                    <GradientStop Color="Magenta" Offset="0.5"/>
                    <GradientStop Color="Red" Offset="0.6"/>
                    <GradientStop Color="White" Offset="0.0">
                    </GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>

        </Ellipse>

        <!-- Селектор -->
        <Canvas x:Name="SelectorCanvas">
            <Ellipse x:Name="Selector"
                     Width="12"
                     Height="12"
                     Stroke="White"
                     StrokeThickness="2"
                     Fill="Red"
                     Canvas.Left="50" Canvas.Top="50">
                <Ellipse.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="Black"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>
    </Grid>
</UserControl>
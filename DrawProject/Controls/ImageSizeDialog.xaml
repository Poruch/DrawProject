<!--  SimpleImageSizeDialog.xaml  -->
<Window
    x:Class="DrawProject.Controls.ImageSizeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Новый документ"
    Width="350"
    Height="250"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Ширина  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                Text="Ширина:" />
            <TextBox
                x:Name="WidthTextBox"
                Width="100"
                VerticalContentAlignment="Center"
                Text="800" />
            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Text=" px" />
        </StackPanel>

        <!--  Высота  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                Text="Высота:" />
            <TextBox
                x:Name="HeightTextBox"
                Width="100"
                VerticalContentAlignment="Center"
                Text="600" />
            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Text=" px" />
        </StackPanel>

        <!--  Пустое пространство  -->
        <Border Grid.Row="3" />

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="5"
                Click="CancelButton_Click"
                Content="Отмена"
                IsCancel="True" />
            <Button
                Width="80"
                Height="30"
                Margin="5"
                Click="OkButton_Click"
                Content="ОК"
                IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
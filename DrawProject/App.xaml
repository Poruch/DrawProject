<Application
    x:Class="DrawProject.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DrawProject"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!--  ЕДИНСТВЕННЫЙ корневой словарь  -->
        <ResourceDictionary>
            <!--  1. Сначала подключаем внешние темы  -->
            <ResourceDictionary.MergedDictionaries>
                <!--  ПРАВИЛЬНЫЙ путь для современных версий Fluent.Ribbon  -->
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  2. Потом добавляем СВОИ ресурсы  -->
            <ImageBrush
                x:Key="CheckerboardBrush"
                ImageSource="pack://application:,,,/Resources/checkerboard.png"
                TileMode="Tile"
                Viewport="0,0,20,20"
                ViewportUnits="Absolute" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
